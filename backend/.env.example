# Database Configuration
# Copy this file to .env and update with your actual database credentials

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/recomm_db

# OpenAI API Key (for content similarity generation)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: Scheduler Configuration  
SCHEDULER_TIMEZONE=local

# Optional: Recommendation Limits
MAX_RECOMMENDATIONS=5

# Example for different database types:
# SQLite: sqlite:///path/to/database.db
# MySQL: mysql://username:password@host:port/database_name
# SQL Server: mssql+pyodbc://username:password@host:port/database_name?driver=ODBC+Driver+17+for+SQL+Server
